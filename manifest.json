{
    "manifest_version": 3,
    "name": "YouTube Auto Pause",
    "version": "1.0",
    "description": "Automatically pauses YouTube videos when you change tabs.",
    "permissions": ["tabs", "activeTab", "scripting"],
    "host_permissions": ["https://www.youtube.com/*"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
